{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Uvicorn (Port 8000)",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "uvicorn",
        "main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "problemMatcher": [
        "$python"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Run HTTP Server (Port 3000)",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "http.server",
        "3000",
        "--bind",
        "127.0.0.1",
        "--directory",
        "."
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Run Tests (Pytest)",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "pytest",
        "-v",
        "--tb=short"
      ],
      "group": "test",
      "problemMatcher": [
        "$pytest"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Test StationLoader",
      "type": "shell",
      "command": "python",
      "args": [
        "test_station_loader.py"
      ],
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Test Routing",
      "type": "shell",
      "command": "python",
      "args": [
        "test_routing.py"
      ],
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Test Fuzzy Search",
      "type": "shell",
      "command": "python",
      "args": [
        "fuzzy_search.py"
      ],
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Debug Google CSE",
      "type": "shell",
      "command": "python",
      "args": [
        "debug_google_cse.py"
      ],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Run Advanced Examples",
      "type": "shell",
      "command": "python",
      "args": [
        "advanced_station_examples.py"
      ],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Kill All Python (Windows)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "Get-Process python -ErrorAction SilentlyContinue | Stop-Process -Force"
      ],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "pip",
        "install",
        "-r",
        "requirements.txt"
      ],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
